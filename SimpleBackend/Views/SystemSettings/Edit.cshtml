@model SimpleBackend.ViewModels.SmtpSettingsViewModel

@section Scripts{
    @Scripts.Render(ScriptName.Bundle.Validate)
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">系統設定</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                編輯
            </div>
            <!-- /.panel-heading -->

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pull-right">
                            @Element.SubmitButton()
                            @Element.BackButton()
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm(Html.PageParam().ActionName, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#smtpSettings" data-toggle="tab" aria-expanded="true">SMTP</a>
                                </li>
                            </ul>
                            <br />
                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="smtpSettings">

									<div class="form-group">
										@Html.LabelFor(model => model.Host)
										@Html.EditorFor(model => model.Host)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.Port)
										@Html.EditorFor(model => model.Port)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.From)
										@Html.EditorFor(model => model.From)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.EnableSsl)
										@Html.EditorFor(model => model.EnableSsl)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.DefaultCredentials)
										@Html.EditorFor(model => model.DefaultCredentials)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.UserName)
										@Html.EditorFor(model => model.UserName)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.Password)
										@Html.EditorFor(model => model.Password)
									</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

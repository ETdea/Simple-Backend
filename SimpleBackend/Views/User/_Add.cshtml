@model SimpleBackend.ViewModels.UserEditViewModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">管理</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                編輯
            </div>
            <!-- /.panel-heading -->

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pull-right">
                            @Element.SubmitButton()
                            @Element.BackButton()
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm(Html.PageParam().ActionName, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#home" data-toggle="tab" aria-expanded="true">編輯項目</a>
                                </li>
                            </ul>
                            <br />
                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="home">

									@if (Html.PageParam().IsEdit)
									{
										@Html.HiddenFor(p => p.Id)
									}

									<div class="form-group">
										@Html.LabelFor(model => model.UserName)
										@Html.EditorFor(model => model.UserName)
									</div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NewPassword)
                                        @Html.EditorFor(model => model.NewPassword)
                                    </div>


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ConfirmPassword)
                                        @Html.EditorFor(model => model.ConfirmPassword)
                                    </div>

									<div class="form-group">
										@Html.LabelFor(model => model.Email)
										@Html.EditorFor(model => model.Email)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.PhoneNumber)
										@Html.EditorFor(model => model.PhoneNumber)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.Disable)
										@Html.EditorFor(model => model.Disable)
									</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

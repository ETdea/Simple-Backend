@model SimpleBackend.ViewModels.ChangePasswordViewModel

@section Scripts{
    @Scripts.Render(ScriptName.Bundle.Validate)
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">變更密碼</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                編輯
            </div>
            <!-- /.panel-heading -->

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pull-right">
                            @Element.SubmitButton()
                            <a class="btn btn-primary" href="~/"><i class="fa fa-reply"></i></a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm(MVC.User.ChangePassword(), FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()

                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="home">

									<div class="form-group">
										@Html.LabelFor(model => model.OldPassword)
										@Html.EditorFor(model => model.OldPassword)
                                      
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.NewPassword)
										@Html.EditorFor(model => model.NewPassword)
									</div>

									<div class="form-group">
										@Html.LabelFor(model => model.ConfirmPassword)
										@Html.EditorFor(model => model.ConfirmPassword)
									</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

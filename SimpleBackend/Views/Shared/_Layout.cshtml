@{
    Layout = MVC.Shared.Views._BaseLayout;
}

@section Styles{
    @RenderSection("styles", required: false)
}

@section Scripts{
    @RenderSection("scripts", required: false)
}


<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            @RenderPage(MVC.Shared.Views.LayoutPage.NavbarHeader)
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
            @RenderPage(MVC.Shared.Views.LayoutPage.NavbarTopLink)
        </ul>
        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            @RenderPage(MVC.Shared.Views.LayoutPage.Sidebar)
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        @RenderBody()
    </div>
    <!-- /#page-wrapper -->


</div>